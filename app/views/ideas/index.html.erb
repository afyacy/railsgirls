<p style="color: green"><%= notice %></p>

<h1>Ideas</h1>

<div id="ideas">
  <% @ideas.each do |idea| %>
    <p>Name: <%= idea.name %></p>
    <p>Description: <%= idea.description %></p>
    <p>Picture: <%= idea.picture %></p>
    <p>
      <%= link_to "Show this idea", idea %>
    </p>
  <% end %>
</div>

<%= link_to "New idea", new_idea_path %>
